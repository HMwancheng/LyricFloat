<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- 状态显示文本 -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="应用已启动，等待连接服务..."
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <!-- 功能按钮区域（移除gap，用margin实现间距） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/debug_mode_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="调试模式"
            android:layout_marginEnd="8dp"/> <!-- 第一个按钮右侧间距 -->

        <Button
            android:id="@+id/scan_local_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="扫描本地歌曲"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/> <!-- 中间按钮左右间距 -->

        <Button
            android:id="@+id/manual_select_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手动选择文件"
            android:layout_marginStart="8dp"/> <!-- 最后一个按钮左侧间距 -->

    </LinearLayout>

    <Button
        android:id="@+id/refresh_lyric_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="刷新歌词"/>

    <!-- 设置Fragment容器 -->
    <FrameLayout
        android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="24dp"/>

</LinearLayout>
