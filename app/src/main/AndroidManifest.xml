<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 核心权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- 存储权限（兼容旧版本） -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />

    <!-- SDK版本配置 -->
    <uses-sdk
        android:minSdkVersion="29"
        android:targetSdkVersion="34"
        tools:overrideLibrary="com.google.android.material" />

    <application
        android:name=".LyricFloatApp"
        android:allowBackup="true"
        android:icon="@android:drawable/ic_media_play"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/ic_media_play"
        android:supportsRtl="true"
        android:theme="@style/Theme.LyricFloat"> <!-- 移除错误的multidexEnabled属性 -->

        <!-- 主界面 -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 悬浮窗服务 -->
        <service
            android:name=".FloatLyricService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback|specialUse" /> <!-- Android 12+必需 -->
        
    </application>

</manifest>
